<?xml version="1.0"?><!DOCTYPE hibernate-mapping
        PUBLIC "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd"><hibernate-mapping>
    <class name="News" table="news">
        <id name="id_news" type="int" column="id_news">
            <generator class="native"/>
        </id>
        <property name="titre" type="string" not-null="true" />
        <property name="contenu" type="string" not-null="true" />
        <property name="date_creation" type="string" not-null="true" />
        <property name="auteur" type="string" not-null="true" />
        <property name="facteur_confiance" type="integer" not-null="true" />
        <property name="tags" type="string" not-null="true" >
        </property>
    </class>
</hibernate-mapping>